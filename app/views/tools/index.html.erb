<h1>Maker Lab</h1>


<!-- search form -->
<%= form_tag search_tools_path || search_inventories_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search" %>
  </p>
<% end %>


<!-- tools -->
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Current Quantity</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.name %></td>
        <td><%= tool.location %></td>
        <td><%= tool.quantity %></td>
        <td><%= tool.available %></td>
        <td><%= link_to 'Show', tool %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<!-- inventory -->
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.name %></td>
        <td><%= inventory.location %></td>
        <td><%= inventory.stock %></td>
        <td><%= link_to 'Show', inventory %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%=  link_to 'Return Tool', checkouts_path %>